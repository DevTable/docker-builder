version = 1

[docker]

build_opts = ["--rm", "--no-cache"]
tag_opts = ["--force"]

[[container]]
name = "global"
registry = "quay.io/modcloth"

[[container]]
name = "base"
Dockerfile = "Dockerfile.base"
project = "docker-builder-base"
tags = ["latest"]

[[container]]
name = "app"
Dockerfile = "Dockerfile"
project = "docker-builder"
tags = ["git:branch", "git:rev", "git:short", "latest"]


